{
	"manifest_version": 2,
	"name": "Decoder Encoder",
	"description": "encoder-decoder using crypto.js",
	"version": "1.0.0",
	"icons": {
		"128": "key128.png",
		"48": "key48.png",
		"24": "key24.png"
	},
	"browser_action": {
		"default_icon": "key128.png",
		"default_popup": "popup.html",
		"default_title": "decoder"
	},
	"background": {
		"scripts": [
			"core.js",
			"md5.js",
			"evpkdf.js",
			"x64-core.js",
			"enc-base64.js",
			"cipher-core.js",
			"aes.js",
			"config.js",
			"background.js"
		],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": ["*://crm.irepair.gr/*"],
			"js": ["content.js"]
		}
	],
	"permissions": [
		"activeTab"
	]
}